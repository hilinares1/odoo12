    <report
            id="purchase_order_product_label_report"
            model="purchase.order"
            report_type="qweb-pdf"
            string="Purchase Order Products (50x25)"
            name="product_barcode_printout.temp_purchase_order_product_label_report"
            file="product_barcode_printout.temp_purchase_order_product_label_report"
            menu="False"
    />


    <record id="product_barcode_printout.purchase_order_product_label_report" model="ir.actions.report">
        <field name="paperformat_id" ref="product_barcode_printout.paperformat_product_format"/>
    </record>


    <template id="temp_purchase_order_product_label_report">
        <t t-call="web.basic_layout">
            <div class="page">
                <!--                <t t-foreach="docs" t-as="o">-->
                <t t-foreach="order_lines" t-as="line">
                    <t t-set="qty" t-value="int(line.product_qty)"/>
                    <t t-set="product" t-value="line.product_id.get_product_print_data()"/>
                    <t t-foreach="range(qty)" t-as="i">
                        <t t-call="product_barcode_printout.report_simple_label_1">
                        </t>
                    </t>
                    <!--                    </t>-->
                </t>
            </div>

        </t>
    </template>

    <report
            id="stock_picking_product_label_report"
            model="stock.picking"
            report_type="qweb-pdf"
            string="Transfer Products (50x25)"
            name="product_barcode_printout.temp_stock_picking_product_label_report"
            file="product_barcode_printout.temp_stock_picking_product_label_report"
    />


    <record id="product_barcode_printout.stock_picking_product_label_report" model="ir.actions.report">
        <field name="paperformat_id" ref="product_barcode_printout.paperformat_product_format"/>
    </record>


    <template id="temp_stock_picking_product_label_report">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="o">
                    <t t-foreach="o.move_ids_without_package" t-as="move">
                        <t t-set="qty" t-value="int(move.product_uom_qty)"/>
                        <t t-set="product" t-value="move.product_id.get_product_print_data()"/>
                        <t t-foreach="range(qty)" t-as="i">
                            <t t-call="product_barcode_printout.report_simple_label_1">

                            </t>
                        </t>
                    </t>
                </t>
            </div>

        </t>
    </template>


