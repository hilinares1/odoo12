<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="fal_purchase_config_settings_view_form_inherit_purchase" model="ir.ui.view">
        <field name="name">fal.purchase.config.settings.view.form.inherit.purchase</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
        <field name="arch" type="xml">
        <xpath expr="//div[@data-string='Purchase']/h2[1]" position="before">
            <h2>Setup</h2>
            <div class="row mt16 o_settings_container">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_contract_conditions_purchase"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_contract_conditions_purchase"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Module to add Contract Conditions template on purchase order
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_product_category_vendor"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_product_category_vendor"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Add vendor on category
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_purchase_modify_project"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_purchase_modify_project"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Module to modify analytic account on purchase
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_purchase_order_sheet_invoice"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_purchase_order_sheet_invoice"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Module to add purchase order sheet on Invoice form
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_purchase_product_selector"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_purchase_product_selector"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Module to give conditional choice on Purchase Order
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_purchase_production_of_number"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_purchase_production_of_number"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Purchase Production Order Number extension
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_purchase_sequence"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_purchase_sequence"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Add Purchase Sequence
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_purchase_target_price"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_purchase_target_price"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Module to add target price on purchases
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_srm"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_srm"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Module to Track proposal and close supplier opportunities
                            <field name="module_fal_last_purchase_price"/>
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_last_purchase_price"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Module to add last purchase price in costing method
                        </div>
                    </div>
                </div>
            </div>
            <h2>CLuedoo Best Practice</h2>
            <div class="row mt16 o_settings_container">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_purchase_additional_info"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_purchase_additional_info"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Module to add additional info in purchase
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_purchase_merge"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_purchase_merge"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Combine multiple RFQ or Purchase Orders
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
         <xpath expr="//div[@name='purchase_setting_container']/div[@class='col-12 col-lg-6 o_setting_box'][1]" position="before">
            <div class="col-xs-12 col-md-6 o_setting_box">
                <div class="o_setting_left_pane">
                    <field name="module_fal_purchase_approval"/>
                </div>
                <div class="o_setting_right_pane">
                    <label for="module_fal_purchase_approval"/>
                    <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                    <div class="text-muted">
                        Module to add Purchase Approval
                    </div>
                    <br/>
                    <div class="o_row" attrs="{'invisible': [('module_fal_purchase_approval', '=', False)]}">
                        <field name="fal_purc_is_proposal" class="oe_inline"/>
                        <label for="fal_purc_is_proposal" class="oe_inline"/>
                        <div class="text-muted oe_inline">
                            Purchase User always restricted to go via proposal
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@name='purchase_setting_container']/div" position="after">
            <div class="col-xs-12 col-md-6 o_setting_box">
                <div class="o_setting_left_pane">
                    <field name="module_fal_procurement_request"/>
                </div>
                <div class="o_setting_right_pane">
                    <label for="module_fal_procurement_request"/>
                    <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                    <div class="text-muted">
                        Module to add additional state Procurement Request
                    </div>
                    <div class="content-group" attrs="{'invisible': [('module_fal_procurement_request','=',False)]}">
                        <div id="module_fal_procurement_email">
                            <field name="module_fal_procurement_email" class="oe_inline"/>
                            <label string="Procurement Request By Email" class="o_light_label" for="module_fal_procurement_request"/>
                        </div>
                        <div id="fal_procurement_alias_prefix" attrs="{'invisible': ['|', ('module_fal_procurement_email', '=',  False), ('alias_domain', 'in', ['localhost', '', False])]}">
                            <div class="mt16">
                                <label for="fal_procurement_alias_prefix" string="Email Alias" class="o_light_label"/>
                                <field name="fal_procurement_alias_prefix" class="oe_inline"/>
                                <span>@</span>
                                <field name="alias_domain"  class="oe_inline" readonly="1"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//label[@for='module_account_3way_match']/../.." position="after">
            <div class="col-xs-12 col-md-6 o_setting_box">
                <div class="o_setting_left_pane">
                    <field name="module_fal_purchase_downpayment"/>
                </div>
                <div class="o_setting_right_pane">
                    <label for="module_fal_purchase_downpayment"/>
                    <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                    <div class="text-muted">
                        add downpayment on purchase
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6 o_setting_box">
                <div class="o_setting_left_pane">
                    <field name="module_fal_purchase_invoice_no_zero_qty"/>
                </div>
                <div class="o_setting_right_pane">
                    <label for="module_fal_purchase_invoice_no_zero_qty"/>
                    <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                    <div class="text-muted">
                        module to create invoice with no zero Quantity
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@data-string='Purchase']" position="inside">
            <h2>Pricing</h2>
            <div class="row mt16 o_settings_container">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_product_supplierinfo_discount"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_product_supplierinfo_discount"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Discounts in product supplier info
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_purchase_discount"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_purchase_discount"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Purchase order lines with discounts
                        </div>
                    </div>
                </div>
            </div>
            <h2>Security</h2>
            <div class="row mt16 o_settings_container">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_purchase_approval_qualified_partner"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_purchase_approval_qualified_partner"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Add Approval for unqualfied partner on purchase
                        </div>
                    </div>
                </div>
            </div>
            <h2>Subcription</h2>
            <div class="row mt16 o_settings_container">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_purchase_subscription"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_purchase_subscription"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            module to Recurring Purchase Orders
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
        </field>
    </record>
    </data>
</odoo>
