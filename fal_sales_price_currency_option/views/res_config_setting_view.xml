<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_fal_currency_opt" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.curr.opt</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='warning_info']" position="before">
                <div id="sales_price_option" class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="fal_sales_price_option"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="fal_sales_price_option"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Set product sales price currency default behaviour
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
