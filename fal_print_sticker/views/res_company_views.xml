<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_form_inherit_fal_print_sticker" model="ir.ui.view">
            <field name="name">view.company_form_inherit_fal_print_sticker</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Report Configuration">
                        <group string="Sticker">
                            <group>
                                <div>
                                    <field name="fal_logo_sticker" widget="image"/>
                                    <label for="fal_header_sticker" style="font-weight: bold;"/>
                                    <div>
                                        <field name="fal_header_sticker"/>
                                    </div>
                                    <label for="fal_description_sticker_1" style="font-weight: bold;"/>
                                    <div>
                                        <field name="fal_description_sticker_1"/>
                                        <field name="fal_description_sticker_2"/>
                                    </div>
                                    <label for="fal_website_sticker" style="font-weight: bold;"/>
                                    <div>
                                        <field name="fal_website_sticker"/>
                                    </div>
                                    <label for="fal_producer_name_sticker" style="font-weight: bold;"/>
                                    <div>
                                        <field name="fal_producer_name_sticker"/>
                                    </div>
                                </div>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
