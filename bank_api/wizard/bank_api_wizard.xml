<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="bank_api_date_form_view">
        <field name="name">bank_api_date.form</field>
        <field name="model">account.bank.api.date</field>
        <field name="arch" type="xml">
            <form string="Set bank statement period to import">
                <sheet>
                    <group>
                        <group>
                            <field name="start_date"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="get_bank_statement" string="Get Statement" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
