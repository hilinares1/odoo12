<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_template_property_form" model="ir.ui.view">
            <field name="name">fal_product_spec_detail.view_template_property_form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <label for="volume" position="before">
                    <label for="fal_length" attrs="{'invisible':['|', ('type', 'not in', ['product', 'consu']), ('product_variant_count', '&gt;', 1)]}"/>
                    <div class="o_row" attrs="{'invisible':['|', ('type', 'not in', ['product', 'consu']), ('product_variant_count', '&gt;', 1)]}">
                        <field name="fal_length"/>
                        <field name="fal_length_uom_id"/>
                    </div>
                    <label for="fal_width" attrs="{'invisible':['|', ('type', 'not in', ['product', 'consu']), ('product_variant_count', '&gt;', 1)]}"/>
                    <div class="o_row" attrs="{'invisible':['|', ('type', 'not in', ['product', 'consu']), ('product_variant_count', '&gt;', 1)]}">
                        <field name="fal_width"/>
                        <field name="fal_width_uom_id"/>
                    </div>
                    <label for="fal_height" attrs="{'invisible':['|', ('type', 'not in', ['product', 'consu']), ('product_variant_count', '&gt;', 1)]}"/>
                    <div class="o_row" attrs="{'invisible':['|', ('type', 'not in', ['product', 'consu']), ('product_variant_count', '&gt;', 1)]}">
                        <field name="fal_height"/>
                        <field name="fal_height_uom_id"/>
                    </div>
                </label>
            </field>
        </record>

        <record id="product_variant_easy_edit_view" model="ir.ui.view">
            <field name="name">fal_product_spec_detail.product_variant_easy_edit_view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <label for="volume" position="before">
                    <label for="fal_length"/>
                    <div class="o_row">
                        <field name="fal_length"/>
                        <field name="fal_length_uom_id" required="1"/>
                    </div>
                    <label for="fal_width"/>
                    <div class="o_row">
                        <field name="fal_width"/>
                        <field name="fal_width_uom_id" required="1"/>
                    </div>
                    <label for="fal_height"/>
                    <div class="o_row">
                        <field name="fal_height"/>
                        <field name="fal_height_uom_id" required="1"/>
                    </div>
                </label>
                <field name="volume" position="attributes">
                    <attribute name="digits"></attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>
