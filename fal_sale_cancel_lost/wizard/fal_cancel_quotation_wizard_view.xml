<odoo>
    <record id="fal_cancel_wizard_view" model="ir.ui.view">
        <field name="name">fal.cancel.wizard.view</field>
        <field name="model">fal.cancel.quotation.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Cancel Reason">
                <p><b>Possible reasons:</b></p>
                <group>
                    <group>
                        <field name="fal_cancel_reason"/>
                        <field name="notes"/>
                    </group>
                </group>
                <footer>
                    <button name="action_confirm_cancel" type="object" string="Confirm" class="btn-primary"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
