<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="fal_hr_expense_config_settings_view_form_inherit_hr_expese" model="ir.ui.view">
        <field name="name">fal.hr.expense.config.settings.view.form.inherit.hr.expense</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="hr_expense.res_config_settings_view_form" />
        <field name="arch" type="xml">
        <xpath expr="//div[@data-string='Expenses']/h2[1]" position="before">
            <h2>Setup</h2>
            <div class="row mt16 o_settings_container">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_expense_cancel"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_expense_cancel"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Add cancel function on expense
                        </div>
                    </div>
                </div>
            </div>
            <h2>CLuedoo Best Practice</h2>
            <div class="row mt16 o_settings_container">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_hr_expense"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_hr_expense"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Create more manageable employee expenses
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt16 o_settings_container">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_expense_report_document"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_expense_report_document"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Module to print expense report with document
                        </div>
                    </div>
                </div>
            </div>
            <h2>Fiscal Periods</h2>
            <div class="row mt16 o_settings_container">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_fal_period_lock_hr"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_fal_period_lock_hr"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                        <div class="text-muted">
                            Lock employee and manager expense and timesheet
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
        </field>
    </record>
    </data>
</odoo>
