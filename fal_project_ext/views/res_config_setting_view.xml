<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form_fal_ext" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.analytic</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='company_share_partner']" position="after">
                    <div id="company_share_project">
                        <field name="fal_project_share" class="oe_inline"/>
                        <label string="Common Project" class="o_light_label" for="fal_project_share"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                    </div>
                    <div id="company_share_project_task">
                        <field name="fal_project_task_share" class="oe_inline"/>
                        <label string="Common Project Task" class="o_light_label" for="fal_project_task_share"/>
                        <span class="badge badge-primary oe_inline" style="background-color:#6CBF84">CLuedoo</span>
                    </div>
                </xpath>
            </field>
        </record>
</odoo>
