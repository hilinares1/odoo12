    <template id="night_mode_on" name="night_mode_on"
              inherit_id="web.assets_backend" active="True">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/scss"
                  href="/allure_backend_theme/static/src/scss/night_variables.scss"/>
            <link rel="stylesheet" type="text/scss"
                  href="/allure_backend_theme/static/src/scss/night_other_variable.scss"/>
            <link rel="stylesheet" type="text/less"
                  href="/allure_backend_theme/static/src/scss/night_mode.scss"/>
        </xpath>
    </template>
    <!-- Left Menu View -[start] -->
    <template id="allure_backend_theme.webclient_bootstrap"
              inherit_id="web.webclient_bootstrap">
        <xpath expr="//div[hasclass('o_main')]" position="replace">
            <div class="o_main">
                <main class="o_main_content ad_rightbar"/>
            </div>
        </xpath>
    </template>
    <template id="allure_backend_theme.layout" inherit_id="web.layout">
        <xpath expr="//body" position="attributes">
            <attribute name="t-attf-class">#{body_classname} uc_theme_#{request.env.user.font_type_values}</attribute>
        </xpath>
