<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_company_payment_term_blank" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.payment.term.blank</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]/div[@data-key='general_settings']/div[@id='multi_company']/div[@name='multi_company']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="fal_set_company_payment_term_blank"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="fal_set_company_payment_term_blank"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."/>
                            <div class="text-muted">
                               Set default company value blank on payment term
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
